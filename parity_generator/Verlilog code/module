module parity_generator #(
  parameter width = 8
) (
  input [width-1:0] a,
  input reset_n,
  output reg parity
);

integer i;

always @* begin
  if (~reset_n) begin
    parity = 0;
  end else begin
    for (i = 0; i < width; i = i + 1) begin
      parity =  parity ^ a[i];
    end
  end
end

endmodule
